{
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^atlantis[.]ya?ml$"
      ],
      "matchStrings": [
        "terraform_version:\\s*(?<currentValue>.*?)\n"
      ],
      "depNameTemplate": "hashicorp/terraform",
      "datasourceTemplate": "github-releases"
    }
  ]
}
